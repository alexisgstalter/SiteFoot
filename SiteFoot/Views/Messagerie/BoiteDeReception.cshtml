@{
    ViewBag.Title = "Boite De Reception";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Boite de réception</h2></center>
<br />
<blockquote>Cliquez sur le sujet d'un message pour afficher le détail</blockquote>
<br />
<div id="mail_container">

</div>
<center><button href="#!" class="btn hoverable" id="send_modal" type="button">Ecrire</button></center>
<div id="modal_message" class="modal">
    <div class="modal-content">
        <h4>Détail du message</h4>
        <div class="row">
            <div class="col s6"><button href="#!" class="btn hoverable" id="btn_repondre" type="button">Répondre</button></div>
        </div>
        <br />
        <div id="message_container"></div>
    </div>
    <div class="modal-footer">

    </div>
</div>
<div id="modal_envoi" class="modal">
    <div class="modal-content">
        <h4>Ecrire un message</h4>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">reorder</i>
                <select id="liste_categorie">
                    <option value="" disabled selected>Sélectionnez une catégorie</option>
                    <option value="Pitchounes">Pitchounes</option>
                    <option value="Poussins">Poussins</option>
                    <option value="U6">U6</option>
                    <option value="U7">U7</option>
                    <option value="U8">U8</option>
                    <option value="U9">U9</option>
                    <option value="U10">U10</option>
                    <option value="U11">U11</option>
                    <option value="U12">U12</option>
                    <option value="U13">U13</option>
                    <option value="U14">U14</option>
                    <option value="U15">U15</option>
                    <option value="U16">U16</option>
                    <option value="U17">U17</option>
                    <option value="U18">U18</option>
                    <option value="U19">U19</option>
                    <option value="U20">U20</option>
                    <option value="Pitchounettes">Pitchounettes</option>
                    <option value="Poussines">Poussines</option>
                    <option value="U6 - filles">U6 - filles</option>
                    <option value="U7 - filles">U7 - filles</option>
                    <option value="U8 - filles">U8 - filles</option>
                    <option value="U9 - filles">U9 - filles</option>
                    <option value="U10 - filles">U10 - filles</option>
                    <option value="U11 - filles">U11 - filles</option>
                    <option value="U12 - filles">U12 - filles</option>
                    <option value="U13 - filles">U13 - filles</option>
                    <option value="U14 - filles">U14 - filles</option>
                    <option value="U15 - filles">U15 - filles</option>
                    <option value="U16 - filles">U16 - filles</option>
                    <option value="U17 - filles">U17 - filles</option>
                    <option value="U18 - filles">U18 - filles</option>
                    <option value="U19 - filles">U19 - filles</option>
                    <option value="U20 - filles">U20 - filles</option>
                    <option value="Seniors">Séniors</option>
                    <option value="Veterans">Vétérans</option>
                </select>
                <label>Catégories</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">reorder</i>
                <select id="liste_joueurs" multiple> <!--sera rempli dynamiquement-->
                    <option disabled>Choisir des joueurs</option>

                </select>
                <label>Joueurs</label>
            </div>
            <div class="input-field">
                <input id="add_destinataire" name="add_destinataire" type="text" class="validate">
                <label>Destinataire à ajouter</label>
            </div>
            <p>Commencez à taper le nom ou login du destinataire</p>
            <br />
            <center><button href="#!" class="btn hoverable" id="btn_add" type="button">Ajouter</button></center>
            <br />
            <form id="form_envoi">
                <div class="input-field">
                    <input id="sujet_envoi" name="sujet_envoi" type="text" class="validate">
                    <label>Sujet</label>
                </div>
                <div class="input-field">
                    <input id="destinataire_envoi" name="destinataire_envoi" type="text" class="validate">
                    <label>Destinataires</label>
                </div>
                <div class="input-field">
                    <textarea id="message_envoi" name="message_envoi" type="text" class="validate materialize-textarea"></textarea>
                    <label>Message</label>
                </div>
                <center><button href="#!" class="btn hoverable" id="btn_envoi" type="submit">Envoyer</button></center>
            </form>
        </div>
        <br />
    </div>
    <div class="modal-footer">

    </div>
</div>
@Scripts.Render("~/Scripts/Messagerie/BoiteDeReception.js")