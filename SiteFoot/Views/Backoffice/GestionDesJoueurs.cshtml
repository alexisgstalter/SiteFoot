@{
    ViewBag.Title = "GestionDesJoueurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Gestion des joueurs</h2></center>
<br />
<blockquote>Si vous désirez donner des permissions supplémentaires aux joueurs, vous devez les affecter à un groupe. Pour celà, allez dans Administration -> Gèrer les utilisateurs</blockquote>
<br />
<div id="membre_container">

</div>
<br />
<center><button class="btn hoverable" id="add_modal" type="button">Ajouter</button></center>
<div id="modal_ajout_membre" class="modal">
    <div class="modal-content">
        <h4>Ajouter un Joueur</h4>
        <form class="row" id="form_ajout_membre">

                    <div class="input-field">
                        <input id="login" name="login" type="text" class="validate">
                        <label>Login</label>
                    </div>
                    <div class="input-field">
                        <input id="password" name="password" type="password" class="validate">
                        <label>Mot de passe</label>
                    </div>
                    <div class="input-field">
                        <input id="confirm_password" name="confirm_password" type="password" class="validate">
                        <label>Confirmer le mot de passe</label>
                    </div>
                    <div class="input-field col s12">
                        <select id="equipe_ajout" name="equipe_ajout" type="text" class="validate">

                            @Html.Action("LoadListEquipes", "Calendrier")

                        </select>
                        <label>Equipe</label>
                    </div>

            <div class="col s12">
                <div class="row">
                    <div class="input-field">
                        <input id="prenom_ajout" name="prenom_ajout" type="text" class="validate">
                        <label>Prénom</label>
                    </div>
                    <div class="input-field">
                        <input id="nom_ajout" name="nom_ajout" type="text" class="validate">
                        <label>Nom</label>
                    </div>
                    <div class="input-field">
                        <textarea id="adresse_ajout" name="adresse_ajout" type="text" class="materialize-textarea validate"></textarea>
                        <label>Adresse</label>
                    </div>
                    <div class="input-field">
                        <input id="telephone_ajout" name="telephone_ajout" type="tel" class="validate">
                        <label>Télephone</label>
                    </div>
                    <div class="input-field">
                        <input id="email_ajout" name="email_ajout" type="text" class="validate">
                        <label>Email</label>
                    </div>
                </div>
            </div>
            <button href="#!" class="btn hoverable" id="btn_ajouter" type="submit">Ajouter</button>
        </form>
    </div>
</div>
<div id="modal_modif_membre" class="modal">
    <div class="modal-content">
        <h4>Modifier un Joueur</h4>
        <form class="row" id="form_modif_membre">
            <div class="col s12">
                <div class="row">
                    <div class="input-field">
                        <input id="login_edit" name="login_edit" type="text" class="validate">
                        <label>Login</label>
                    </div>
                    <div class="input-field">
                        <input id="password_edit" name="password_edit" type="password" class="validate">
                        <label>Mot de passe</label>
                    </div>
                    <div class="input-field">
                        <input id="confirm_password_edit" name="confirm_password_edit" type="password" class="validate">
                        <label>Confirmer le mot de passe</label>
                    </div>
                    <div class="input-field col s12">
                        <select id="equipe_modif" name="equipe_modif" type="text" class="validate">

                            @Html.Action("LoadListEquipes", "Calendrier")

                        </select>
                        <label>Equipe</label>
                    </div>
                </div>


            </div>
            <div class="col s12">
                <div class="row">
                    <div class="input-field">
                        <input id="prenom_modif" name="prenom_modif" type="text" class="validate">
                        <label class="active">Prénom</label>
                    </div>
                    <div class="input-field">
                        <input id="nom_modif" name="nom_modif" type="text" class="validate">
                        <label class="active">Nom</label>
                    </div>
                    <div class="input-field">
                        <textarea id="adresse_modif" name="adresse_modif" type="text" class="materialize-textarea validate"></textarea>
                        <label class="active">Adresse</label>
                    </div>
                    <div class="input-field">
                        <input id="telephone_modif" name="telephone_modif" type="tel" class="validate">
                        <label class="active">Télephone</label>
                    </div>
                    <div class="input-field">
                        <input id="email_modif" name="email_modif" type="text" class="validate">
                        <label class="active">Email</label>
                    </div>
                </div>
            </div>
            <button href="#!" class="btn hoverable" id="btn_ajouter" type="submit">Modifier</button>
        </form>
    </div>
</div>
@Scripts.Render("~/Scripts/Backoffice/GestionDesJoueurs.js")