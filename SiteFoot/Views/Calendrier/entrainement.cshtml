@{
    ViewBag.Title = "entrainement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <form class="container" id="find_entrainement" style="color : #8F010C">
        <center><h2>Ajouter un évenement</h2></center>

        <div class="input-field">
            <select id="terrain" name="terrain" type="text" class="validate">@Html.Action("LoadListTerrains", "Calendrier")</select>
            <label>Terrain</label>
        </div>
        <div class="input-field">
            <select id="entraineur">@Html.Action("LoadListEntraineurs", "Calendrier")</select>
            <label>Entraineur</label>
        </div>
        <div class="input-field">
            <select id="equipe" name="equipe" type="text" class="validate">@Html.Action("LoadListEquipes", "Calendrier")</select>
            <label>Equipe</label>
        </div>
        <div class="input-field">
            <select id="membre" name="membre" type="text" class="validate"></select>
            <label>Membre</label>
        </div>
        <p> Il faut d'abord sélectionner une équipe pour pouvoir choisir un membre</p>
        <center><button href="#!" class="btn" id="btn_ajouter" type="submit">Chercher</button></center>
    </form>
    <br />
    @{
        var groupes = (List<SiteFoot.Models.Groupe>)HttpContext.Current.Session["CurrentGroupe"];
        bool can_add_entrainement = false;
        foreach (SiteFoot.Models.Groupe grp in groupes)
	    {
		    if(grp.Droit_gerer_entrainement){
                can_add_entrainement = true;
            }
	    }
        if(can_add_entrainement)
        {
            <center><button type="button" class="btn" id="add_modal">Ajouter un entrainement</button></center>
        }
    }
    <div id="calendrier_entrainement" class="" style="color : #8F010C"></div>
    
</div>
